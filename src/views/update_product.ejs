<!-- adding a new product -->
<h1 style="text-align: center">Update product</h1>
<%if(errormsg){%>
    <div class="alert alert-warning alert-dismissible fade show" role="alert">
        <%= errormsg%>
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
    <%}%>
        <form action="/" method="post">
            <div class="mb-3">
                <input type="hidden" class="form-control" id="name" name="name" placeholder="Enter the book name" />
            </div>
            <div class="mb-3">
                <label for="name" class="form-label">Enter name </label>
                <input type="text" class="form-control" id="name" name="name" placeholder="Enter the book name" value="<%= product.name %>" />
            </div>
            <div class="form-floating">
                <textarea class="form-control" value="<%= product.desc %>" placeholder="Add discription here" id="desc" name="desc"></textarea>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Enter Price </label>
                <input type="number" id="price" name="price" class="form-control" placeholder="Enter the amount" value="<%= product.price %>" />
            </div>
            <div class="mb-3">
                <label for="imageUrl" class="form-label">Enter Image URL</label>
                <input type="text" class="form-control" id="imageUrl" name="imageUrl" placeholder="Image URL" value="<%= product.imageUrl %>" />
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>