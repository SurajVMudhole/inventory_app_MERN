<!-- adding a new product -->
<form action="/" method="post">
  <div class="mb-3">
    <label for="name" class="form-label">Email address</label>
    <input
      type="text"
      class="form-control"
      id="name"
      name="name"
      placeholder="Enter the book name"
    />
  </div>
  <div class="form-floating">
    <textarea
      class="form-control"
      placeholder="Add discription here"
      id="desc"
      name="desc"
    ></textarea>
    <label for="desc">desc</label>
  </div>
  <div class="mb-3">
    <label for="price" class="form-label">Email address</label>
    <input
      type="number"
      id="price"
      name="price"
      class="form-control"
      placeholder="Enter the amount"
    />
  </div>
  <div class="mb-3">
    <label for="imageUrl" class="form-label">Email address</label>
    <input
      type="url"
      class="form-control"
      id="imageUrl"
      name="imageUrl"
      placeholder="Image URL"
    />
  </div>
  <button type="submit" class="btn btn-primary">Submit</button>
  <%if(errormsg){%>
  <div class="alert alert-warning alert-dismissible fade show" role="alert">
    <%= errormsg%>
    <button
      type="button"
      class="btn-close"
      data-bs-dismiss="alert"
      aria-label="Close"
    ></button>
  </div>
  <%}%>
</form>
